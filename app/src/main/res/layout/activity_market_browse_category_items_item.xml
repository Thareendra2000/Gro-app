<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_margin="16dp"
app:cardCornerRadius="16dp"
app:cardElevation="8dp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/tvCatItemImage"
        android:layout_width="130dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:src="@drawable/buttonborder"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <!--Item Details-->
            <LinearLayout
                android:id="@+id/ItemCardDetails"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/fourdp"
                android:layout_weight="7"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvItemName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/guava"
                    android:textStyle="bold"
                    android:textColor="@color/darkGreen"
                    android:textSize="20sp" />

                <View
                    android:layout_width="210dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/gray" />

                <TextView
                    android:id="@+id/tvItemDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/item1Description"
                    android:textColor="@color/darkGreen"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvItemPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/item1Price"
                    android:textColor="@color/darkGreen"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvItemBestBefore"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/item1BestBefore"
                    android:textColor="@color/darkGreen"
                    android:textSize="12sp" />
            </LinearLayout>

            <!--Ratings-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/tvItemRatings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/aprove_button"
                    android:text="@string/ratings"
                    android:textColor="@color/backgroundWhite" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
</androidx.cardview.widget.CardView>
