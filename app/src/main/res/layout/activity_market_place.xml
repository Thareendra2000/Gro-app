                    android:layout_weight="1"
                    android:src="@drawable/buttonborder">

                </ImageView>

                <TextView
                    android:id="@+id/avrgSesionEx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/vegetables"
                    android:textAlignment="center"
                    android:textColor="@color/backgroundWhite"
                    android:textSize="24sp" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/averageSessionCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/cardbackground"
                android:orientation="vertical"
                android:padding="@dimen/eightdp"
                android:layout_margin="@dimen/fourdp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:src="@drawable/buttonborder">

                </ImageView>

                <TextView
                    android:id="@+id/avrgSesionEx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/medicinalLeafs"
                    android:textAlignment="center"
                    android:textColor="@color/backgroundWhite"
                    android:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/averageSessionCard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/cardbackground"
                android:orientation="vertical"
                android:padding="@dimen/eightdp"
                android:layout_margin="@dimen/fourdp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:src="@drawable/buttonborder">

                </ImageView>

                <TextView
                    android:id="@+id/avrgSesionEx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/indoorPlants"
                    android:textAlignment="center"
                    android:textColor="@color/backgroundWhite"
                    android:textSize="24sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/averageSessionCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/cardbackground"
                android:orientation="vertical"
                android:padding="@dimen/eightdp"
                android:layout_margin="@dimen/fourdp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:src="@drawable/buttonborder">

                </ImageView>

                <TextView
                    android:id="@+id/avrgSesionEx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/shadePlants"
                    android:textAlignment="center"
                    android:textColor="@color/backgroundWhite"
                    android:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
